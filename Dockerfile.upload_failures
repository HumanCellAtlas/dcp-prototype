FROM public.ecr.aws/lambda/python:3.8

ADD backend/chalice/upload_failures/requirements.txt requirements.txt
RUN pip3 install -r requirements.txt

ADD backend/chalice/upload_failures .
ADD backend/corpora/lambdas/upload_failures ./chalicelib/upload_failures

ADD backend/corpora/common ./chalicelib/common
ADD backend/corpora/dataset_processing ./chalicelib/dataset_processing
RUN mkdir -p ./.chalice

CMD ["app.handle_failure"]
