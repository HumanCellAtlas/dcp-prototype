{
   "definitions":{

   },
   "version":"v0.1.0",
   "$schema":"http://json-schema.org/draft-07/schema#",
   "$id":"http://data.humancellatlas.org.com/artifact.json",
   "type":"object",
   "title":"The Artifact Schema",
   "description":"Schema for the Artifact object underlying Browser, cellxgene, etc.",
   "required":[
      "meta",
      "projects",
      "files"
   ],
   "properties":{
      "meta":{
        "$id":"#/properties/meta",
        "type":"object",
        "required":[
          "artifact_title",
          "artifact_version",
          "created_on",
          "schema_version",
          "schema_name"
        ],
        "properties":{
          "artifact_title":{
            "$id":"#/properties/meta/properties/artifact_title",
            "type":"string",
            "description":"Descriptive title for the artifact",
            "examples": [
              "3/20/2020 Demo Artifact",
              "HCA v3 10x Artifact"
            ]
          },
          "artifact_version":{
            "$id":"#/properties/meta/properties/artifact_version",
            "type":"string",
            "description":"Version of the artifact (not the schema)"
          },
          "created_on":{
            "$id":"#/properties/meta/properties/created_on",
            "type":"string",
            "type":"string",
            "format":"date-time",
            "description":"Date and time this version of the artifact was created"
          },
          "schema_version":{
            "$id":"#/properties/meta/properties/schema_version",
            "type":"string",
            "description":"Version of the artifact schema this artifact definition follows"
          },
          "schema_name":{
            "$id":"#/properties/meta/properties/schema_name",
            "type":"string",
            "description":"Name of the artifact schema this artifact definition follows"
          }
        }
      },
      "projects":{
         "$id":"#/properties/projects",
         "type":"array",
         "items":{
            "$id":"#/properties/projects/items",
            "type":"object",
            "required":[
               "donor_development_stages_at_collection",
               "donor_species",
               "biosample_names",
               "biosample_categories",
               "organs",
               "systems",
               "id",
               "title",
               "library_construction_methods",
               "assay_categories",
               "donor_diseases",
               "biosample_diseases",
               "selected_cell_types",
               "selected_cell_markers",
               "input_nucleic_acid_molecules",
               "nucleic_acid_sources",
               "cell_isolation_methods",
               "paired_end",
               "contributors",
               "protocols_io_doi",
               "publication_title",
               "publication_doi",
               "publication_pmid",
               "insdc_project_accessions",
               "geo_series_accessions",
               "array_express_accessions",
               "biostudies_accessions",
               "cell_count"
            ],
            "properties":{
               "donor_development_stages_at_collection":{
                  "$id":"#/properties/projects/items/properties/donor_development_stages_at_collection",
                  "type":"array",
                  "items":{
                     "$id":"#/properties/projects/items/properties/donor_development_stages_at_collection/items",
                     "type":"string",
                     "examples":[
                        "Fetal/Embryo",
                        "Adult"
                     ]
                  }
               },
               "donor_species":{
                  "$id":"#/properties/projects/items/properties/donor_species",
                  "type":"array",
                  "items":{
                     "$id":"#/properties/projects/items/properties/donor_species/items",
                     "type":"string",
                     "examples":[
                        "Homo sapiens",
                        "Mus Musculus"
                     ]
                  }
               },
               "biosample_names":{
                  "$id":"#/properties/projects/items/properties/biosample_names",
                  "type":"array",
                  "items":{
                     "$id":"#/properties/projects/items/properties/biosample_names/items",
                     "type":"string",
                     "examples":[
                        "cerebellum",
                        "A549"
                     ]
                  }
               },
               "biosample_categories":{
                  "$id":"#/properties/projects/items/properties/biosample_categories",
                  "type":"array",
                  "items":{
                     "$id":"#/properties/projects/items/properties/biosample_categories/items",
                     "type":"string",
                     "examples":[
                        "Primary",
                        "Cell line"
                     ]
                  }
               },
               "organs":{
                  "$id":"#/properties/projects/items/properties/organs",
                  "type":"array",
                  "items":{
                     "$id":"#/properties/projects/items/properties/organs/items",
                     "type":"string",
                     "examples":[
                        "brain",
                        "lung"
                     ]
                  }
               },
               "systems":{
                  "$id":"#/properties/projects/items/properties/systems",
                  "type":"array",
                  "items":{
                     "$id":"#/properties/projects/items/properties/systems/items",
                     "type":"string",
                     "examples":[
                        "nervous",
                        "respiratory"
                     ]
                  }
               },
               "id":{
                  "$id":"#/properties/projects/items/properties/id",
                  "type":"string",
                  "examples":[
                     "HCA-Project-cddab57b-6868-4be4-806f-395ed9dd635a"
                  ]
               },
               "title":{
                  "$id":"#/properties/projects/items/properties/title",
                  "type":"string",
                  "examples":[
                     "Single cell transcriptome analysis of human pancreas"
                  ]
               },
               "library_construction_methods":{
                  "$id":"#/properties/projects/items/properties/library_construction_methods",
                  "type":"array",
                  "items":{
                     "$id":"#/properties/projects/items/properties/library_construction_methods/items",
                     "type":"string",
                     "examples":[
                        "SS2",
                        "10x 3' v2"
                     ]
                  }
               },
               "assay_categories":{
                  "$id":"#/properties/projects/items/properties/assay_categories",
                  "type":"array",
                  "items":{
                     "$id":"#/properties/projects/items/properties/assay_categories/items",
                     "type":"string",
                     "examples":[
                        "scRNA-seq",
                        "bulk DNA sequencing"
                     ]
                  }
               },
               "donor_diseases":{
                  "$id":"#/properties/projects/items/properties/donor_diseases",
                  "type":"array",
                  "items":{
                     "$id":"#/properties/projects/items/properties/donor_diseases/items",
                     "type":"string",
                     "examples":[
                        "Diseased",
                        "Normal"
                     ]
                  }
               },
               "biosample_diseases":{
                  "$id":"#/properties/projects/items/properties/biosample_diseases",
                  "type":"array",
                  "items":{
                     "$id":"#/properties/projects/items/properties/biosample_diseases/items",
                     "type":"string",
                     "examples":[
                        "Diseased",
                        "Normal"
                     ]
                  }
               },
               "selected_cell_types":{
                  "$id":"#/properties/projects/items/properties/selected_cell_types",
                  "type":"array"
               },
               "selected_cell_markers":{
                  "$id":"#/properties/projects/items/properties/selected_cell_markers",
                  "type":"array"
               },
               "input_nucleic_acid_molecules":{
                  "$id":"#/properties/projects/items/properties/input_nucleic_acid_molecules",
                  "type":"array",
                  "items":{
                     "$id":"#/properties/projects/items/properties/input_nucleic_acid_molecules/items",
                     "type":"string",
                     "examples":[
                        "RNA",
                        "DNA"
                     ]
                  }
               },
               "nucleic_acid_sources":{
                  "$id":"#/properties/projects/items/properties/nucleic_acid_sources",
                  "type":"array",
                  "items":{
                     "$id":"#/properties/projects/items/properties/nucleic_acid_sources/items",
                     "type":"string",
                     "examples":[
                        "single_cell",
                        "bulk"
                     ]
                  }
               },
               "cell_isolation_methods":{
                  "$id":"#/properties/projects/items/properties/cell_isolation_methods",
                  "type":"array",
                  "items":{
                     "$id":"#/properties/projects/items/properties/cell_isolation_methods/items",
                     "type":"string",
                     "examples":[
                        "drop",
                        "plate"
                     ]
                  }
               },
               "paired_end":{
                  "$id":"#/properties/projects/items/properties/paired_end",
                  "type":"array",
                  "items":{
                     "$id":"#/properties/projects/items/properties/paired_end/items",
                     "type":"boolean",
                     "default":false,
                     "examples":[
                        true,
                        false
                     ]
                  }
               },
               "contributors":{
                  "$id":"#/properties/projects/items/properties/contributors",
                  "type":"array",
                  "items":{
                     "$id":"#/properties/projects/items/properties/contributors/items",
                     "type":"object",
                     "required":[
                        "name",
                        "institution"
                     ],
                     "properties":{
                        "name":{
                           "$id":"#/properties/projects/items/properties/contributors/items/properties/name",
                           "type":"string",
                           "examples":[
                              "first last"
                           ]
                        },
                        "institution":{
                           "$id":"#/properties/projects/items/properties/contributors/items/properties/institution",
                           "type":"string",
                           "examples":[
                              "Stanford"
                           ]
                        }
                     }
                  }
               },
               "protocols_io_doi":{
                  "$id":"#/properties/projects/items/properties/protocols_io_doi",
                  "type":"array"
               },
               "publication_title":{
                  "$id":"#/properties/projects/items/properties/publication_title",
                  "type":"string",
                  "examples":[
                     "publication title"
                  ]
               },
               "publication_doi":{
                  "$id":"#/properties/projects/items/properties/publication_doi",
                  "type":"string",
                  "examples":[
                     "publication doi"
                  ]
               },
               "publication_pmid":{
                  "$id":"#/properties/projects/items/properties/publication_pmid",
                  "type":"string",
                  "examples":[
                     "publication pmid"
                  ]
               },
               "insdc_project_accessions":{
                  "$id":"#/properties/projects/items/properties/insdc_project_accessions",
                  "type":"array"
               },
               "geo_series_accessions":{
                  "$id":"#/properties/projects/items/properties/geo_series_accessions",
                  "type":"array"
               },
               "array_express_accessions":{
                  "$id":"#/properties/projects/items/properties/array_express_accessions",
                  "type":"array"
               },
               "biostudies_accessions":{
                  "$id":"#/properties/projects/items/properties/biostudies_accessions",
                  "type":"array"
               },
               "cell_count":{
                  "$id":"#/properties/projects/items/properties/cell_count",
                  "type":"integer",
                  "default":0,
                  "examples":[
                     2500
                  ]
               }
            }
         }
      },
      "files":{
         "$id":"#/properties/files",
         "type":"array",
         "items":{
            "$id":"#/properties/files/items",
            "type":"object",
            "required":[
               "id",
               "type",
               "filename",
               "file_format",
               "file_size",
               "s3_uri",
               "library_construction_method",
               "organ",
               "species"
            ],
            "properties":{
               "id":{
                  "$id":"#/properties/files/items/properties/id",
                  "type":"string",
                  "examples":[
                     "file_id"
                  ]
               },
               "type":{
                  "$id":"#/properties/files/items/properties/type",
                  "type":"string",
                  "examples":[
                     "EXPRESSION"
                  ]
               },
               "filename":{
                  "$id":"#/properties/files/items/properties/filename",
                  "type":"string",
                  "examples":[
                     "SR324.fastq.gz"
                  ]
               },
               "file_format":{
                  "$id":"#/properties/files/items/properties/file_format",
                  "type":"string",
                  "examples":[
                     "bam"
                  ]
               },
               "file_size":{
                  "$id":"#/properties/files/items/properties/file_size",
                  "type":"string",
                  "examples":[
                     "4365"
                  ]
               },
               "s3_uri":{
                  "$id":"#/properties/files/items/properties/s3_uri",
                  "type":"string",
                  "examples":[
                     "s3://sample_bucket/sample_key"
                  ]
               },
               "library_construction_method":{
                  "$id":"#/properties/files/items/properties/library_construction_method",
                  "type":"string",
                  "examples":[
                     "ss2"
                  ]
               },
               "organ":{
                  "$id":"#/properties/files/items/properties/organ",
                  "type":"string",
                  "examples":[
                     "brain"
                  ]
               },
               "species":{
                  "$id":"#/properties/files/items/properties/species",
                  "type":"string",
                  "examples":[
                     "Homo Sapiens"
                  ]
               }
            }
         }
      }
   }
}
